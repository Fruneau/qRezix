#MIN_CONFIG

KDE_PROG_LIBTOOL
AC_PATH_QT(3, 3, 0)

case $host in
        bsd)
                AC_DEFINE_UNQUOTED([Q_OS_BSD],1,[disable signal handler if host is bsd])
        ;;
esac
				
if test "x$enable_kde" = "xno" || test "x$enable_kde" = "x"; then
	cp -f klocale.h.qtonly qrezix/klocale.h
	qrezix_dir="/usr/share/qrezix"
        plugin_dir="/usr/lib/qrezix"
fi

if test "x$enable_kde" = "xyes"; then
	AM_KDE_WITH_NLS
	AC_PATH_KDE
	
	rm -f qrezix/klocale.h
	qrezix_dir="/usr/share/apps/qrezix"
        plugin_dir="/usr/lib/qrezix"
fi

AC_DEFINE_UNQUOTED(QREZIX_DATA_DIR, "$qrezix_dir", [ Chemin vers le repertoire d'installation des icones qrezix])
AC_DEFINE_UNQUOTED(QREZIX_LIB_DIR, "$plugin_dir", [ Chemin vers le répertoire d'installation des plug-ins de qrezix])

